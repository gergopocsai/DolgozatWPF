<Window x:Class="DolgozatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DolgozatWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="0" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5"  VerticalAlignment="Center">
            <Label Content="Név: "/>
            <TextBox x:Name="nev" Width="150" Height="20" Margin="5"/>
            <Label Content="Életkor: "/>
            <TextBox x:Name="eletKor" Width="50" Height="20" Margin="5"/>
            <Label Content="Pontszám: "/>
            <TextBox x:Name="pontszam" Width="50" Height="20" Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
            <Button Content="Hozzáadás" Width="100" Margin="5" Padding="3" Click="hozzaAdas"/>
            <Button Content="Mentés" Width="100" Margin="5" Padding="3" Click="mentes"/>
        </StackPanel>
    </Grid>
</Window>
